{% extends 'BackBundle::categorie/categorie.html.twig' %}
{% block head %}
    <script>
        $(function(){
            $('#Categories').attr('style','background-color:#EFEFEF');

        });
    </script>
{% endblock %}


{% block page_top %}
    <div class="row">
        <div  class="col-md-3 col-md-offset-2 " style="font-size: 25px;margin-top: 10px;margin-left:200px ">Categories list </div>

        <div class="col-md-2 col-md-offset-1" style="margin-top: 10px"><a class=" col-md-8 btn btn-danger" href="{{ path('Acategorie_new') }}" >Creer</a></div>
    </div>
{% endblock %}

{% block page_center %}
    <br>
    <div class="col-md-6 col-md-offset-2" style="overflow:auto" >
    <table   class="  table table-striped table-bordered  ">
        <thead>
        <tr   style="background-color: black;color: white">
            <th width="30px">Id</th>
            <th width="50px">Categorie</th>
            <th width="100px">action</th>

        </tr>
        </thead>
        <tbody>

        {% for categorie in categories %}
            <tr  >

                <td class="" >{{ categorie.id }}</td>
                <td class="" >{{ categorie.categorie }}</td>


                <td>
                  <a class="btn btn-danger col-md-offset-1 col-md-4" href="{{ path('Acategorie_modifier', { 'id': categorie.id }) }}">Modifier</a>

                    <a style="" class="btn btn-info col-md-offset-1 col-md-5"  onclick="if(!confirm('etes vous sur !'))
                    {return false}" href="{{ path('Acategorie_delete', { 'id': categorie.id }) }}">Supprimer  </a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    
{% endblock %}
