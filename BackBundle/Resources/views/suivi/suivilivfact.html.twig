{% extends '::base.html.twig' %}



{% block page_left %}

    <div style="margin-left: 10px">




        <h3 style="color: white">Administration</h3>
        <ul style="margin-left:6px; padding-top:10px;font-size: medium ;" class="nav nav-pills nav-stacked">

            <li  ><a href="{{ path('suiviventecmd') }}">Suivi Vente</a></li>
            <li class="active" ><a href="{{ path('suivilivraisonbon') }}">Suivi Livraison</a></li>
 <li ><a href="{{ path('charte') }}">Chiffre d'affaire</a></li>



        </ul>






    </div>


{% endblock %}

{% block page_top %}
    <div class="row">
        <div class="row">
        <div style="font-size: 32px" class="col-md-4 col-md-offset-1"> Liste Facture Livraison </div>
        <div class="col-md-offset-2 col-md-2  " style="margin-top: 10px">

          <select class="form-control" id="trier">

           <option selected value="facture"> Facture</option>
            <option value="commande"> Commande</option>

          </select>



        </div>
    </div>
{% endblock %}
{% block page_center %}



    <br><br>

    <div class="col-md-8 col-md-offset-1 ">



        <table   class=" table table-hover table-striped table-bordered  ">
            <thead>
            <tr>
                <th class="text-center">ID</th>

                <th width="200px" class="text-center">Utilisateur</th>
                 <th width="200px" class="text-center">Fournisseur</th>
                <th width="200px" class="text-center">Date</th>


                <th class="text-center">Total(DH)</th>

                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody id="tbody">

            {% for c in fact %}

                <tr >
                    <td class="text-center">{{ c.id }}</td>
                      <td class="text-center">{{ c.utilisateur }}</td>
                    <td class="text-center">{{ c.commandeAchat.fournisseur }}</td>
                    <td class="text-center">{{ c.date.format("Y-m-d ")}}</td>

                    <td class="text-center">{{ c.total }}DH</td>
                    <td class="text-center"><a href="{{ path('Lfacture_voir',{'id':c.id}) }}">Voir</a>
                    </td>

                </tr>

            {% endfor %}


            </tbody>
        </table>

    </div>

    <script>
        $(function(){
            $('form').addClass('form-inline');
            $('label').hide();
              $('#trier').change(function(){
            var url=Routing.generate('suivilivraisonbon');
            window.location.href=url;
            });


        });
    </script>
{% endblock %}