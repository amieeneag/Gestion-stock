{% block head %}
    <script>
        $(function(){
            $('#Produits').attr('style','background-color:#EFEFEF');

        });
    </script>
{% endblock %}

{% block page_top %}
    <div class="row">
    <div  class="col-md-3 " style="font-size: 35px">Produits list </div>
    <div class="col-md-5 col-md-offset-1 " style="margin-top: 10px">

        {% form_theme form 'bootstrap_3_layout.html.twig' %}

        {{ form(form) }}

    </div>
        <div class="col-md-2" style="margin-top: 10px"><a class=" col-md-12 btn btn-danger" href="{{ path('Aproduit_new') }}" >Creer</a></div>
    </div>
{% endblock %}
{% block page_center %}
    <br>
<div class="col-md-12" style="overflow:auto" >
    <br>
    <table   class=" table table-striped table-bordered  ">
        <thead>
            <tr style="background-color: black;color: white">
                <th>Id</th>
                <th>Designation</th>
                <th>Image</th>
                <th>categorie</th>
                <th>Marque</th>
                <th>Prixachat<br>(DH)</th>
                <th>Marge<br>(%)</th>
                <th>Prixvente<br>(DH)</th>
                <th >Quantité<br>Stock</th>
                <th>Quantité<br>seuil</th>
                <th>Active</th>
                <th >Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('Aproduit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td width="100" style="width: 10%" >{{ produit.designation }}</td>
                <td><img width="70px"   src="{{ asset('bundles/image/'~produit.image  ) }}"></td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.prixAchat }}</td>
                <td>{{ produit.Marge }}</td>
                <td>{{ produit.prixVente }}</td>


                <td >{{ produit.quantiteStock }}</td>
                <td>{{ produit.quantiteSeuil }}</td>



                <td>{% if produit.active %}Oui{% else %}No{% endif %}</td>


                <td>

                            <a class="btn btn-info col-md-12"  href="{{ path('Aproduit_show', { 'id': produit.id }) }}">show  </a><br>
                 <hr>   <a class="btn btn-danger col-md-12" href="{{ path('Aproduit_modifier', { 'id': produit.id }) }}">Modifier</a><br>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
