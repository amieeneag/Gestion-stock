{% extends 'BackBundle::fournisseur/fournisseur.html.twig' %}
{% block head %}
    <script>
        $(function(){
            $('#Fournisseurs').attr('style','background-color:#EFEFEF');

        });
    </script>
{% endblock %}

{% block page_top %}
    <div class="row">
        <div  class="col-md-4 " style="font-size: 25px;margin-top: 10px;margin-left: 40px">Liste Fournisseur </div>
        <div class="col-md-5 " style="margin-top: 10px">

            {% form_theme form 'bootstrap_3_layout.html.twig' %}

            {{ form(form) }}

        </div>
        <div class="col-md-2" style="margin-top: 10px"><a class=" col-md-12 btn btn-danger" href="{{ path('Afournisseur_new') }}" >Creer</a></div>
    </div>
{% endblock %}
{% block page_center %}
    <br>
    <div class="col-md-12" style="overflow:auto" >
        <br>
        <table   class=" table table-striped table-bordered  ">
            <thead>
            <tr style="background-color: black;color: white">
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Categories</th>
                <th>Raisonsocial</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for fournisseur in fournisseurs %}
                <tr>
                    <td>{{ fournisseur.id }}</td>
                    <td>{{ fournisseur.nom }}</td>
                    <td>{{ fournisseur.prenom }}</td>


                    <td>{% for c in fournisseur.categories %}  {{ c.categorie }} <br>

                        {% endfor %} </td>

                    <td>{{ fournisseur.raisonSocial }}</td>
                    <td>{{ fournisseur.adresse }}</td>
                    <td>{{ fournisseur.email }}</td>
                    <td>{{ fournisseur.telephone }}</td>
                    <td>{% if fournisseur.active %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <a class="btn btn-info col-md-12"  href="{{ path('Afournisseur_show', { 'id': fournisseur.id }) }}">show  </a><br>
                          <a style="margin-top: 5px" class="btn btn-danger col-md-12" href="{{ path('Afournisseur_modifier', { 'id': fournisseur.id }) }}">Modifier</a><br>


                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(function() {



            $('label').hide();
            $('form').attr('class','form-inline');

        });



    </script>


{% endblock %}
