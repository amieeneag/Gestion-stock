{% extends 'BackBundle::utilisateur/utilisateur.html.twig' %}
{% block head %}
    <script>
        $(function(){
            $('#form_cherch').removeAttr('required');


        });
    </script>
{% endblock %}

{% block page_top %}
    <div class="row">
        <div  class="col-md-3 " style="margin-top: 10px; margin-left: 35px ; font-size:25px"> Utilisateurs  </div>
        <div class="col-md-5  " style="margin-top: 10px">

            {% form_theme form 'bootstrap_3_layout.html.twig' %}

            {{ form(form) }}

        </div>
        <div class="col-md-2 col-md-offset-1" style="margin-top: 10px"><a class=" col-md-6 btn btn-danger" href="{{ path('Autilisateur_new') }}" >Creer</a></div>
    </div>
{% endblock %}
{% block page_center %}
    <br>
    <div class="col-md-12" style="overflow:auto" >
        <br>
        <table   class=" table table-striped table-bordered  ">
            <thead>
            <tr  style="background-color: black;color: white">
                <th class="text-center">Id</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Prenom</th>
                <th class="text-center">Email</th>
                <th class="text-center">Active</th>
                <th class="text-center">Role</th>
                <th  class="text-center" style="width: 150px">Actions</th>
            </tr>
            </thead>
            <tbody>

            {% for utilisateur in utilisateurs %}
                <tr class="text-center">
                    <td><a href="{{ path('Autilisateur_show', { 'id': utilisateur.id }) }}">{{ utilisateur.id }}</a></td>
                    <td>{{ utilisateur.nom }}</td>
                    <td>{{ utilisateur.prenom }}</td>
                    <td>{{ utilisateur.email }}</td>

                    <td>{% if utilisateur.active %}<img width="40px" src="{{ asset('valide.png') }}">  </a>
                        {% else %}<img width="40px" src="{{ asset('invalide.png') }}">  </a>{% endif %}</td>
                    <td>{{ utilisateur.role }}</td>


                    <td>
             <a  href="{{ path('Autilisateur_show', { 'id': utilisateur.id }) }}">
                 <img width="40px" src="{{ asset('afficher.jpg') }}">  </a>
               <a  style="margin-top: 10px"  href="{{ path('Autilisateur_modifier', { 'id': utilisateur.id }) }}">
                   <img height="" width="50px" src="{{ asset('modifier.jpg') }}"></a>


                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script>
        $(function() {



            $('label').hide();
            $('form').attr('class','form-inline');

        });



    </script>


{% endblock %}
