{% extends '::laayout.html.twig' %}

{% block page_left %}
    <div style="margin-left: 10px">


        <h3 >CommandeVente</h3>
        <ul style="font-size: medium ;" class="nav nav-pills nav-stacked">

            <li ><a href="{{ path('Vcmd_new') }}">Creer Commande</a></li>
            <li><a href="{{ path('Vcmd_list') }}">Liste Commande</a></li>

        </ul>
        <h3 >Facture</h3>
        <ul style="font-size: medium ;" class="nav nav-pills nav-stacked">

            <li class="active"><a href="{{ path('facture_list') }}">Facture</a></li>


        </ul>
        <h3 >Client</h3>
        <ul style="font-size: medium ;" class="nav nav-pills nav-stacked">

            <li><a href="{{ path('Aclient_index') }}">Client</a></li>


        </ul>

    </div>

{% endblock %}
{% block page_top %}
    <div class="row">
        <div style="font-size: 25px;margin-top: 10px;margin-left: 200px" class="col-md-3">Liste Facture</div>

        <div class=" col-md-4" style="margin-top: 10px;margin-left: 100px">
            {% form_theme form 'bootstrap_3_layout.html.twig' %}{{ form(form) }}</div>
    </div>
{% endblock %}
{% block page_center %}



    <br><br>

    <div class="col-md-8 col-md-offset-2 ">



        <table   class=" table table-hover table-striped table-bordered  ">
            <thead>
            <tr>
                <th class="text-center">ID</th>

                <th width="200px" class="text-center">Date</th>
                <th class="text-center">Mode paiement</th>

                <th class="text-center">Remise</th>
                <th class="text-center">Total(DH)</th>

                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody id="tbody">

            {% for c in fact %}

                <tr >
                    <td class="text-center">{{ c.id }}</td>

                    <td class="text-center">{{ c.date.format("Y-m-d ")}}</td>
                    <td class="text-center">{{ c.modePaiement }} </td>
                    <td class="text-center">{{ c.remise}} </td>
                    <td class="text-center">{{ c.total }}DH</td>
                    <td class="text-center"><a href="{{ path('facture_voir',{'id':c.id}) }}">Voir</a>
                    </td>

                </tr>

            {% endfor %}


            </tbody>
        </table>

    </div>
<script>
    $(function(){
        $('form').attr('class','form-inline');
        $('#form_cherch').removeAttr('required');
        $('label').hide();
        $('form').submit(function(){
            test = /[0-9]$/;
            if(!test.test($('#form_cherch').val() ) && $('#form_cherch').val()!="" ) {

                alert('Entrer un numero ');

                $('#form_cherch').val("");
                return false;
            }

        })
    })
</script>


{% endblock %}